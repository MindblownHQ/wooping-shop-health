{
  "name": "mind-blown/shop-health",
  "description": "Check the health of your Woocommerce shop",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Mind Blown Productions",
      "email": "info@mindblown.software"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Wooping\\ShopHealth\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require": {
    "php": ">=7.4",
    "shop-maestro/conductor": "dev-main"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpstan/extension-installer": "^1.3",
    "yoast/yoastcs": "^3.0"
  },
  "repositories": [
	{
		"type": "vcs",
		"url": "git@github.com:MindblownHQ/conductor.git"
	}
  ],
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse src --memory-limit 1G",
    "check-cs": "vendor/bin/phpcs --config-set php_version 7040 && ./vendor/bin/phpcs src/",
    "fix-cs": "vendor/bin/phpcbf --config-set php_version 7040 && ./vendor/bin/phpcbf src/",
    "prefix-dependencies": "./vendor/humbug/php-scoper/bin/php-scoper add-prefix --prefix=Shop_Maestro_Vendor --output-dir=vendor_prefixed/ --config=vendor/shop-maestro/conductor/config/php-scoper/dependency-injection.inc.php --force --quiet",
    "post-install-cmd": [
      "@prefix-dependencies"
    ],
    "post-autoload-dump": [
      "@prefix-dependencies"
    ]
  }
}
